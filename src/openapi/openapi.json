          },
          "eventName": {
            "type": "string"
          },
          "eventDescription": {
            "type": "string"
          },
          "eventLocation": {
            "type": "string"
          },
          "eventStartDate": {
            "type": "integer",
            "format": "int64"
          },
          "eventEndDate": {
            "type": "integer",
            "format": "int64"
          },
