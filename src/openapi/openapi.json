              "OPEN",
              "CLOSED"
            ]
          },
          "volunteers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      },
      "RegisterRequest": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "maxLength": 2147483647,
            "minLength": 8,
            "type": "string"
          },
          "password": {
            "maxLength": 2147483647,
            "minLength": 8,
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "ADMIN",
              "VOLUNTEER",
              "ORGANIZATION"
            ]
          }
        }
